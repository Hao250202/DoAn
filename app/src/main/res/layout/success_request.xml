<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="118dp"
            android:layout_height="81dp"
            android:background="@drawable/app_symbol"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"/>

        <ImageView
            android:layout_width="109dp"
            android:layout_height="95dp"
            android:background="@drawable/like"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"/>
        
        <TextView
            android:layout_width="311dp"
            android:layout_height="wrap_content"
            android:text="Thank you."
            android:textSize="20dp"
            android:layout_marginTop="30dp">
        </TextView>

        <TextView
            android:layout_width="311dp"
            android:layout_height="wrap_content"
            android:text="You will be redirected to the login page in 5 seconds..."
            android:textSize="20dp"
            android:layout_marginTop="15dp">
        </TextView>

        <TextView
            android:layout_width="311dp"
            android:layout_height="wrap_content"
            android:text="Click here if you are not redirected automatically"
            android:textSize="20dp"
            android:textStyle="italic"
            android:layout_marginTop="15dp">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Need help? Visit our help center"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="80dp">
        </TextView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>